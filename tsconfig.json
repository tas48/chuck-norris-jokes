{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES2015",                               
    "forceConsistentCasingInFileNames": true,          
    "strict": true,                                    
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "public/dist",
    "rootDir": "./src",
    "watch": true,
    "lib": ["DOM", "ES6"],
    "removeComments": true,
    "moduleResolution": "node"
  }
}
